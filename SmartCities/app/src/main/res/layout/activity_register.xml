<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.henallux.smartcities.view.RegisterActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/lastnameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastnameText"
            android:layout_alignBaseline="@+id/lastNameEditText"
            android:layout_alignBottom="@+id/lastNameEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/lastNameEditText"
            android:layout_toStartOf="@+id/lastNameEditText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/lastNameEditText"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:selectAllOnFocus="false" />

        <TextView
            android:text="@string/firstnameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstnameText"
            android:layout_alignBaseline="@+id/firstTextEditText"
            android:layout_alignBottom="@+id/firstTextEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/firstTextEditText"
            android:layout_toStartOf="@+id/firstTextEditText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/firstTextEditText"
            android:layout_below="@+id/lastNameEditText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="@string/mailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mailText"
            android:layout_alignBaseline="@+id/mailEditText"
            android:layout_alignBottom="@+id/mailEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/mailEditText"
            android:layout_toStartOf="@+id/mailEditText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_below="@+id/firstTextEditText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/mailEditText" />

        <TextView
            android:text="@string/phoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneText"
            android:layout_alignBaseline="@+id/phoneEditText"
            android:layout_alignBottom="@+id/phoneEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/phoneEditText"
            android:layout_toStartOf="@+id/phoneEditText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:layout_below="@+id/mailEditText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/phoneEditText" />

        <TextView
            android:text="@string/streetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/streetText"
            android:layout_alignBaseline="@+id/streetEditText"
            android:layout_alignBottom="@+id/streetEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/streetEditText"
            android:layout_toStartOf="@+id/streetEditText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/streetEditText"
            android:layout_below="@+id/phoneEditText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="@string/numberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numText"
            android:layout_alignBaseline="@+id/numEditText"
            android:layout_alignBottom="@+id/numEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/numEditText"
            android:layout_toStartOf="@+id/numEditText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numEditText"
            android:layout_below="@+id/streetEditText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="@string/postalCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postalCodeText"
            android:layout_alignBaseline="@+id/postalCodeEditText"
            android:layout_alignBottom="@+id/postalCodeEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/postalCodeEditText"
            android:layout_toStartOf="@+id/postalCodeEditText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/postalCodeEditText"
            android:layout_below="@+id/numEditText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="@string/cityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cityText"
            android:layout_alignBaseline="@+id/cityEditText"
            android:layout_alignBottom="@+id/cityEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/cityEditText"
            android:layout_toStartOf="@+id/cityEditText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:layout_below="@+id/postalCodeEditText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/cityEditText" />

        <TextView
            android:text="@string/countryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countryText"
            android:layout_alignBaseline="@+id/countryTextEdit"
            android:layout_alignBottom="@+id/countryTextEdit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/countryTextEdit"
            android:layout_toStartOf="@+id/countryTextEdit" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/countryTextEdit"
            android:layout_below="@+id/cityEditText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="@string/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerButtonRegister"
            android:layout_below="@+id/countryTextEdit"
            android:layout_centerHorizontal="true"
            style="@style/btnColor"/>

    </RelativeLayout>



</ScrollView>
